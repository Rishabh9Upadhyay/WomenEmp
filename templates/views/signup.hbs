<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>signup</title>
    <link rel="stylesheet" href="./css/session.css">
    <link rel="icon" type="images/png" href="./img./b1.png">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>

<body>
    <div class="main_div">
        <div class="main_box">
            <div class="box">
                <div class="content">
                    {{#if alert1}}
                    <form method="post" action="/register" enctype="multipart/form-data">
                        <div class="heading">
                            <h2>Sign Up</h2>
                        </div>
                        <div class="group_div">
                            <span class="material-symbols-outlined">
                                info
                            </span>
                            This email is already registered
                        </div>
                        <div class="grup_div">
                            <input type="text" value="{{alert1.Name}}" name="Name" placeholder="Name" autocomplete="off"
                                required>
                        </div>
                        <div class="grup_div">
                            <input type="email" name="Email" placeholder="Email" autocomplete="off" required>
                        </div>
                        <div class="group_div">
                            <span style="margin: 0px 10px;"><input type="radio" name="Gender" value="{{alert1.Gender}}">Male</span>
                            <span style="margin: 0px 10px;"><input type="radio" name="Gender" value="{{alert1.Gender}}">Female</span>
                            <span style="margin: 0px 10px;"><input type="radio" name="Gender" value="{{alert1.Gender}}">others</span>
                        </div>
                        <div class="grup_div">
                            <input type="password" value="{{alert1.Password}}" name="Password" placeholder="Password"
                                autocomplete="off" required>
                        </div>
                        <div class="grup_div">
                            <input type="password" value="{{alert1.Cpassword}}" name="Cpassword"
                                placeholder="Re-enter password" autocomplete="off" required>
                        </div>
                        <div class="grup_div">
                            <input type="file" accept="iamge/*" name="imagename" required>
                        </div>
                        <input type="submit" value="submit" name="submit">
                        <p>Have already account? <a href="/signin">login</a></p>
                    </form>
                    {{else if alert2}}
                    <form method="post" action="/register" enctype="multipart/form-data">
                        <div class="heading">
                            <h2>Sign Up</h2>
                        </div>
                        <div class="group_div">
                            <span class="material-symbols-outlined">
                                info
                            </span>
                            Passwords are not matching
                        </div>
                        <div class="grup_div">
                            <input type="text" value="{{alert2.Name}}" name="Name" placeholder="Name" autocomplete="off"
                                required>
                        </div>
                        <div class="grup_div">
                            <input type="email" value="{{alert2.Email}}" name="Email" placeholder="Email" autocomplete="off" required>
                        </div>
                        <div class="group_div">
                            <span style="margin: 0px 10px;"><input type="radio" name="Gender" value="{{alert2.Gender}}">Male</span>
                            <span style="margin: 0px 10px;"><input type="radio" name="Gender" value="{{alert2.Gender}}">Female</span>
                            <span style="margin: 0px 10px;"><input type="radio" name="Gender" value="{{alert2.Gender}}">others</span>
                        </div>
                        <div class="grup_div">
                            <input type="password" value="{{Password}}" name="Password" placeholder="Password"
                                autocomplete="off" required>
                        </div>
                        <div class="grup_div">
                            <input type="password" value="{{Cpassword}}" name="Cpassword"
                                placeholder="Re-enter password" autocomplete="off" required>
                        </div>
                        <div class="grup_div">
                            <input type="file" accept="iamge/*" name="imagename" required>
                        </div>
                        <input type="submit" value="submit" name="submit">
                        <p>Have already account? <a href="/signin">login</a></p>
                    </form>

                    {{else if alert5}}




                    <form method="post" action="/register" enctype="multipart/form-data">
                        <div class="heading">
                            <h2>Update Profile</h2>
                        </div>
                        <div class="grup_div">
                            <input type="text" value="{{alert5.Name}}" name="Name" placeholder="Name" autocomplete="off"
                                required>
                        </div>
                        <div class="grup_div">
                            <input type="email" value="{{alert5.Email}}" readonly name="Email" placeholder="Email" autocomplete="off" required>
                        </div>
                        <div class="group_div">
                            <span style="margin: 0px 10px;"><input type="radio" name="Gender" value="{{alert5.Gender}}">Male</span>
                            <span style="margin: 0px 10px;"><input type="radio" name="Gender" value="{{alert5.Gender}}">Female</span>
                            <span style="margin: 0px 10px;"><input type="radio" name="Gender" value="{{alert5.Gender}}">others</span>
                        </div>
                        <div class="grup_div">
                            <input type="password" name="Password" placeholder="Password"
                                autocomplete="off" required>
                        </div>
                        <div class="grup_div">
                            <input type="password" name="Cpassword"
                                placeholder="Re-enter password" autocomplete="off" required>
                        </div>
                        <div class="grup_div">
                            <input type="file" accept="iamge/*" name="imagename">
                        </div>
                        <input type="submit" value="submit" name="submit">
                        {{!-- <p>Have already account? <a href="/signin">login</a></p> --}}
                    </form>





                    {{else}}
                    <form method="post" action="/register" enctype="multipart/form-data">
                        <div class="heading">
                            <h2>Sign Up</h2>
                        </div>
                        <div class="grup_div">
                            <input type="text" name="Name" placeholder="Name" autocomplete="off" required>
                        </div>
                        <div class="grup_div">
                            <input type="email" name="Email" placeholder="Email" autocomplete="off" required>
                        </div>
                        <div class="group_div">
                            <span style="margin: 0px 10px;"><input type="radio" name="Gender" value="M">Male</span>
                            <span style="margin: 0px 10px;"><input type="radio" name="Gender" value="F">Female</span>
                            <span style="margin: 0px 10px;"><input type="radio" name="Gender" value="F">others</span>
                        </div>
                        <div class="grup_div">
                            <input type="password" name="Password" placeholder="Password" autocomplete="off" required>
                        </div>
                        <div class="grup_div">
                            <input type="password" name="Cpassword" placeholder="Re-enter password" autocomplete="off"
                                required>
                        </div>
                        <div class="grup_div">
                            <input type="file" accept="iamge/*" name="imagename" required>
                        </div>
                        <input type="submit" value="submit" name="submit">
                        <p>Have already account? <a href="/signin">login</a></p>
                    </form>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</body>

</html>